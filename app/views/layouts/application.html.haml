!!!tranditional
%html
  %head
    %title= h(yield(:title) || "Untitled")
    = stylesheet 'metacss', 'application'
    = javascript 'application'
    = yield :head
  %body
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      = render :partial => 'layouts/nav', :locals => {:user => current_user}

      - if show_title?
        %h1= h yield(:title)

      = yield
